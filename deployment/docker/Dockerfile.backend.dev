FROM python:3.11-slim-bookworm

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    vim \
    htop \
    && rm -rf /var/lib/apt/lists/*

# 生成SSL证书
RUN mkdir -p /app/ssl
RUN openssl req -x509 -newkey rsa:4096 -keyout /app/ssl/staging.key -out /app/ssl/staging.crt -days 365 -nodes -subj "/C=CN/ST=Beijing/L=Beijing/O=Development/OU=IT/CN=localhost"

# 复制依赖文件
COPY requirements.txt .

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements.txt

# 安装开发工具
RUN pip install --no-cache-dir \
    black \
    flake8 \
    pytest \
    pytest-asyncio \
    httpx \
    ipython \
    debugpy

# 创建必要的目录
RUN mkdir -p /app/uploads /app/logs

# 复制应用代码
COPY . .

# 设置权限
RUN chmod +x /app/deployment/scripts/*.sh

# 暴露端口
EXPOSE 8000

# 健康检查
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1